<form class="form-signin" name="loginForm" style="max-width:300px">
  <div class="row">
    <div class="alert"></div>
  </div>
  <div class="row">
    <label for="username">Username</label>
    <input type="email" name="username" class="form-control username" autofocus=""/>
    <br />
    <label for="password">Password</label>
    <input type="password" name="password" class="form-control password"/>
    <br />    
  </div>
  <div class="row">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-info loginButton">Login</button>
    <a href="/login/forgot-password" class="pull-left forgotPasswordButton">Forgot Password?</a>
  </div>
</form>