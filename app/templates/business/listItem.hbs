<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row panel-title">
      <div class="row well well-sm">
        <div class="col-md-3 image">
	
          {{#if imageUrl}}
              <img src="{{imageUrl}}" class="currentImage"/>
{{else}}
	<img src="/client/images/image-placeholder-bg.png" class="placeholderImage"/>
          {{/if}}

        </div>
        <div class="col-md-6">
          <h2><a class="inlineEditButton" data-toggle="collapse" title="Click to edit this event" data-parent="#accordion" href="#collapse{{_id}}">{{name}}</a></h2>
          <div class="businessLocation">{{location.address}}</div>

        </div>
        <div class="col-md-3 promotionTargets">
            <p class="social-connection fb-auth"><a class="facebook connected socialConnected" id="deauth-facebook" title="Click to deauthorize Facebook"><img src="/client/images/fb_connected.png">Connected</a></p>
            <p class="social-connection fb-not-auth"><a class="facebook socialNotConnected" id="{{_id}}" href="{{facebookConnectUrl}}"><img src="/client/images/fb_not_connected.png">Connect this channel</a></p>
            <p class="social-connection tw-auth"><a class="twitter connected socialConnected" id="deauth-twitter" title="Click to deauthorize Twitter"><img src="/client/images/twitter-connected.png">Connected</a></p>
            <p class="social-connection tw-not-auth"><a class="twitter socialNotConnected" id="{{_id}}" href="{{twitterConnectUrl}}"><img  src="/client/images/twitter-not-connected.png">Connect this channel</a></p>
        </div>        
      </div>
    </div>
  </div>
  <div id="collapse{{_id}}" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="inlineEdit"></div>
    </div>
  </div>
</div>         