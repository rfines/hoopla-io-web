<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row panel-title">
      <div class="row well well-sm">
        <div class="col-md-3 image">
          {{#if imageUrl}}
              <img src="{{imageUrl}}" class="currentImage"/>
          {{/if}}
        </div>
        <div class="col-md-6">
          <h2><a class="inlineEditButton" data-toggle="collapse" title="Click to edit this event" data-parent="#accordion" href="#collapse{{_id}}">{{name}}</a></h2>
          <div class="businessLocation">{{location.address}}</div>

        </div>
        <div class="col-md-3 promotionTargets">
          {{#if facebookConnected}}
            <p class="social-connection"><a class="facebook connected socialConnected" id="facebook_{{_id}}" href="/business/{{_id}}/facebookDeauthorize" title="Click to deauthorize Facebook"><img src="/client/images/fb_connected.png">Connected</a></p>
          {{else}}
            <p class="social-connection"><a class="facebook socialNotConnected" id="facebook_{{_id}}" href="{{facebookConnectUrl}}"><img src="/client/images/fb_not_connected.png">Connect this channel</a></p>
          {{/if}}
          {{#if twitterConnected}}
            <p class="social-connection"><a class="twitter connected" id="twitter_{{_id}}" href="/business/{{_id}}/twitterDeauthorize" title="Click to deauthorize Twitter"><img class="socialConnected" src="/client/images/twitter-connected.png">Connected</a></p>
          {{else}}
            <p class="social-connection"><a class="twitter socialNotConnected" id="twitter_{{_id}}" href="{{twitterConnectUrl}}"><img class="socialNotConnected" src="/client/images/twitter-not-connected.png">Connect this channel</a></p>
          {{/if}}    
        </div>        
      </div>
    </div>
  </div>
  <div id="collapse{{_id}}" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="inlineEdit"></div>
    </div>
  </div>
</div>         