<div class="errors"></div>
<form class="resetPasswordForm form-horizontal" method="POST" action="/api/passwordReset">
  <div class="control-group">
    <label for="email" class="control-label">Email address</label>
    <div class="controls">
      <input type="email" name="email" class="email span3" id="email"/>
    </div>
  </div>
  <div class="control-group">
    <label for="password" class="control-label">Password</label>
    <div class="controls">
      <input type="password" name="password" class="password span3" id="password"/>
    </div>
  </div>
  <div class="control-group">
    <label for="password-confirm" class="control-label">Confirm Password</label>
    <div class="controls">
      <input type="password" name="password-confirm" class="password-confirm span3" id="password-confirm"/>
    </div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form