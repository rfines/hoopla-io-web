<form class="form-signin" name="loginForm" >
  <div class="modal-body">
    <div class="alert"></div>
    <input type="email" name="username" class="form-control username" placeholder="Email Address" autofocus=""/>
    <br />
    <input type="password" name="password" class="form-control password" placeholder="Password"/>
    <br />    
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary loginButton">Login</button><br />
    <a href="/login/forgot-password" class="pull-right forgotPasswordButton">Forgot Password?</a>
  </div>
</form>