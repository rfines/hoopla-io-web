{{#if isPost}}
<div class="row pr-list-item">
  <div class="col-md-3 pr-date">
    <div class="row heading">{{#if past}}Date Posted{{else}}Scheduled Date{{/if}}</div>
    <div class="row"><p>{{formattedTime}}</p></div>
  </div>
  {{#if imageUrl}}
  <div class=" col-md-3 pr-image-container">
    <img class="pr-image" src="{{imageUrl}}" alt="promotion image" />
  </div>
  {{/if}}
  <div class="col-md-6 pr-message-container">
    <div class="row heading">Posted to {{handle}}</div>
    <div class="row"><p class="pr-message">{{message}}</p></div>
  </div>
  <div class="col-md-2 controls">
    <a class="btn btn-default" href="{{{postUrl}}}" target="_blank">View on Facebook</a>
    <a class="delete-pr" href="#"><i class="deleteButton glyphicon glyphicon-remove-circle"></i></a>
  </div>
</div>
{{else}}
  <div class="facebook-event-actions">
    <a href="{{{postUrl}}}"class="btn btn-default" target="_blank">View on Facebook</a>
  </div>
{{/if}}