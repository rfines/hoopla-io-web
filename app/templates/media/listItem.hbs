
  <div class="col-sm-6 col-md-5 col-lg-4">
    <div class="well">
        <a href="#" class="thumbnail" data-toggle="modal" data-target="#{{{_id}}}">
          <img data-src={{{thumbUrl}}} src={{{thumbUrl}}} class="media-item" alt="media image" />
        </a>
        <div class="caption" style="margin-top:4%">
          <div class="row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              {{#if imageName}}
                <h5>{{imageName}}</h5>
              {{else}}
                <h5></h5>
              {{/if}}
            </div>

            <div class="pull-right buttons"><button data-toggle="modal" data-target="#{{{_id}}}" class="btn btn-primary">Enlarge</button>   <a href="#" class="btn btn-warning deleteButton">Delete</a>
            </div>
          </div>
        </div>
    </div>
  </div>
<div class="modal fade" id="{{{_id}}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          {{#if imageName}}
            <h4 class="modal-title">{{imageName}}</h4>
          {{else}}
            <h4 class="modal-title"></h4>
          {{/if}}
        </div>
        <div class="modal-body">
          <img data-src={{{fullUrl}}} src={{{fullUrl}}} class="media-item" alt="media image" />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>